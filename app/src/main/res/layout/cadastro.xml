<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastro"
    android:background="@drawable/cadastro">


    <EditText
        android:layout_marginTop="95dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Nome"
        android:id="@+id/cadastro_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Número de telefone"
        android:id="@+id/numero_phone"/>

    <EditText
        android:id="@+id/cadastro_cargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cargo"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Data de Contrato"
        android:id="@+id/cadastro_contrato"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Salário"
        android:id="@+id/cadastro_salario"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="150dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#151215"
            android:textColor="@color/colorPrimary"
            android:text="Salvar Dados"
            android:id="@+id/cadastro_salvar"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#151215"
            android:textColor="@color/colorPrimary"
            android:text="Mostrar Lista"
            android:id="@+id/mostrar_lista"
            android:layout_weight="1"
            android:layout_margin="2dp" />

    </LinearLayout>


</LinearLayout>